extends layout

block content
  .container
    .row.banner
      .col-12

    .row.mt-4
      // First Card for Add Your Review Form
      .col-12.col-md-8
        .card
          .card-body
            h2.card-title Add Your Review
            form(action="/location-review-form", method="get", role="form")
              .form-group
                label(for='name') Full Name
                input#name.form-control(type='text', name='name', required=true)

              .form-group
                label(for='email') Email
                input#email.form-control(type='email', name='email', required=true)

              .form-group
                label(for='style') Rate Us
                select#style.form-control(name='style', required=true)
                  option(value='') Select a Rating
                  option(value='1star') 1 Star
                  option(value='2star') 2 Stars
                  option(value='3star') 3 Stars
                  option(value='4star') 4 Stars
                  option(value='5star') 5 Stars

              .form-group
                label(for='message') Feedback
                textarea#message.form-control(name='message', rows='3')

              button.btn.btn-primary(type='submit') Submit Review

// Second Card for Customer Reviews
    .row.mt-4 // Add a new row for the second card
      .col-12.col-md-8
        .card
          .card-body
            h2.card-title Customer Reviews
            .review
              span.rating
                i.fas.fa-star
                i.fas.fa-star
                i.fas.fa-star
                i.fas.fa-star
                i.far.fa-star
